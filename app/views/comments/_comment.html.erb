<div class="border-t border-gray-200 py-4 max-w-2xl">
  <div class="flex justify-between items-start">
    <div class="flex items-center space-x-2">
      <div class="text-sm font-semibold text-gray-900"><%= comment.user.email_address %></div>
      <div class="text-xs text-gray-500"><%= time_ago_in_words(comment.created_at) %> ago</div>
    </div>
    <% if Current.user == comment.user %>
      <%= button_to "Delete", post_comment_path(comment.post, comment), method: :delete, class: "text-xs text-red-600 hover:text-red-800", data: { turbo_confirm: "Are you sure?" } %>
    <% end %>
  </div>
  <div class="mt-2 text-gray-700">
    <%= comment.content %>
  </div>
</div>
