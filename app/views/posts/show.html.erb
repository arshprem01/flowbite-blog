<%= content_for :title do %>
    <%= @post.title %>
<% end %>
<div class="max-w-7xl mx-auto py-24">
 <nav class="flex px-4 lg:px-0" aria-label="Breadcrumb">
  <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
    <li class="inline-flex items-center">
      <a href="/" class="inline-flex items-center text-sm font-medium text-body hover:text-fg-brand">
        <svg class="w-4 h-4 me-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m4 12 8-8 8 8M6 10.5V19a1 1 0 0 0 1 1h3v-3a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v3h3a1 1 0 0 0 1-1v-8.5"/></svg>
        Home
      </a>
    </li>
    <li aria-current="page">
      <div class="flex items-center space-x-1.5">
        <svg class="w-3.5 h-3.5 rtl:rotate-180 text-body" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7"/></svg>
        <span class="inline-flex items-center text-sm font-medium text-body-subtle"><%= @post.title %></span>
      </div>
    </li>
  </ol>
</nav>
<br/>

    <%= image_tag @post.banner_image, class: "w-full h-64 object-cover" %>
    <h1 class="text-4xl text-gray-900 mt-8"> <%= @post.title %></h1>
    <div class="mt-8 px-4 lg:px-0 text-xl">
        <%= @post.body %>
    </div>

    <div class="mt-8 px-4 lg:px-0 flex items-center space-x-4">
        <% if authenticated? %>
            <% like = Current.user.likes.find_by(post: @post) %>
            <% if like %>
                <%= button_to "Unlike", post_like_path(@post, like), method: :delete, class: "px-4 py-2 bg-red-100 text-red-600 rounded-lg hover:bg-red-200" %>
            <% else %>
                <%= button_to "Like", post_likes_path(@post), method: :post, class: "px-4 py-2 bg-blue-100 text-blue-600 rounded-lg hover:bg-blue-200" %>
            <% end %>
        <% else %>
            <p class="text-sm text-gray-500">Log in to like this post.</p>
        <% end %>
        <span class="text-lg font-semibold text-gray-700"><%= @post.likes.count %> Likes</span>
        <% if authenticated? && @post.user == Current.user %>
            <div class="ml-auto">
                <%= button_to "Delete Post", post_path(@post), method: :delete, class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700", data: { turbo_confirm: "Are you sure you want to delete this post?" } %>
            </div>
        <% end %>
    </div>

    <div class="mt-12 px-4 lg:px-0">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Comments (<%= @post.comments.count %>)</h2>
        
        <% if authenticated? %>
            <%= render "comments/form", post: @post %>
        <% else %>
            <p class="text-gray-600 mb-8">Please <%= link_to "log in", new_session_path, class: "text-blue-600 hover:underline" %> to leave a comment.</p>
        <% end %>

        <div class="mt-8">
            <%= render @post.comments.order(created_at: :desc) %>
        </div>
    </div>
</div>
