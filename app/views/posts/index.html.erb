<div class="max-w-7xl w-full mx-auto py-8 lg:py-24 flex flex-col">

<div class="flex flex-col md:flex-row justify-between items-center mb-8">
  <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 dark:text-white">Latest Writing</h2>
  <% if authenticated? %>
    <%= link_to new_post_path, class: "text-white bg-violet-600 hover:bg-violet-700 focus:ring-4 focus:ring-violet-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-violet-600 dark:hover:bg-violet-700 focus:outline-none dark:focus:ring-violet-800 inline-flex items-center" do %>
      <svg class="w-5 h-5 mr-2 -ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clip-rule="evenodd"></path></svg>
      Create New Post
    <% end %>
  <% end %>
</div>

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    <%= render partial: "post" , collection: @posts %>
</div>

<div class="mt-12 flex justify-center">
  <%= paginate @posts %>
</div>

</div> 