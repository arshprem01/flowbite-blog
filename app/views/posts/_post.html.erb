<div class="bg-white block max-w-sm border border-gray-200 rounded-lg shadow-md mx-auto">
    <% if post.banner_image.attached? %>
        <a href="<%= url_for(post) %>">
            <%= image_tag post.banner_image, class: "rounded-t-lg w-full h-48 object-cover", alt: post.title %>
        </a>
    <% end %>
    <div class="p-6 text-center">
        <span class="inline-flex items-center bg-purple-100 border border-purple-200 text-purple-800 text-xs font-medium px-2.5 py-0.5 rounded-full mb-4">
            <svg class="w-3 h-3 me-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.122 17.645a7.185 7.185 0 0 1-2.656 2.495 7.06 7.06 0 0 1-3.52.853 6.617 6.617 0 0 1-3.306-.718 6.73 6.73 0 0 1-2.54-2.266c-2.672-4.57.287-8.846.887-9.668A4.448 4.448 0 0 0 8.07 6.31 4.49 4.49 0 0 0 7.997 4c1.284.965 6.43 3.258 5.525 10.631 1.496-1.136 2.7-3.046 2.846-6.216 1.43 1.061 3.985 5.462 1.754 9.23Z"/></svg>
            Trending
        </span>
        <a href="<%= url_for(post) %>">
            <h5 class="mb-4 text-2xl font-bold tracking-tight text-gray-900"><%= post.title %></h5>
        </a>
        <div class="mb-6 text-sm text-gray-600 line-clamp-3">
            <%= post.body.to_plain_text %>
        </div>
        <a href="<%= url_for(post) %>" class="inline-flex items-center text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 focus:outline-none">
            Read more
            <svg class="w-4 h-4 ms-2 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 12H5m14 0-4 4m4-4-4-4"/></svg>
        </a>
    </div>
</div>
